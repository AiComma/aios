{
  "extends": "plasmo/templates/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/ui/*": [
        "./src/components/ui/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "~assets/*": [
        "./assets/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".plasmo/index.d.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "next.config.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
